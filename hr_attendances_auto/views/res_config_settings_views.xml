<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.inherit.form.hr.attendance.auto</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"></field>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
            <div class="app_settings_block" data-string="Attendances" string="Attendances" data-key="hr_attendance" groups="hr_attendance.group_hr_attendance_manager">
                    <h2>Region</h2>
                <div class="row mt16 o_settings_container">
                    <div class="o_setting_left_pane">
                        <field name="company_timezone"/>
                    </div>
                </div>
            </div>
                <div class="app_settings_block" data-string="Attendances" string="Attendances" data-key="hr_attendance" groups="hr_attendance.group_hr_attendance_manager">
                    <h2>Check time</h2>
                <div class="row mt16 o_settings_container">
                    <div class="o_setting_left_pane">
                        <field name="in_out_times"/>
                    </div>
                </div>
            </div>
            </xpath>
        </field>
    </record>
</odoo>
